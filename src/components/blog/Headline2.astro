---
export interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="mb-6 max-w-3xl mx-auto">
  <h2 class="text-3xl md:text-3xl font-bold leading-tighter tracking-tighter font-heading" set:html={title} />
  {
    subtitle && (
      <div class="mt-2 md:mt-3 mx-auto text-xl text-gray-500 dark:text-slate-400 font-medium" set:html={subtitle} />
    )
  }
</header>
